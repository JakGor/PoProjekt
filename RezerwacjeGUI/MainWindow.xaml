        <Button x:Name="button_Najemcy" Content="NAJEMCY" HorizontalAlignment="Left" Height="44" Margin="10,122,0,0" VerticalAlignment="Top" Width="242" Click="button_Najemcy_Click"/>
        <Button x:Name="button_Rezerwacje" HorizontalAlignment="Left" Height="44" Margin="10,188,0,0" VerticalAlignment="Top" Width="242" Click="button_Rezerwacje_Click">
            <Label x:Name="label1" Content="REZERWACJE"/>
        </Button>
        <Button x:Name="button" Content="WYJDŹ" HorizontalAlignment="Left" Height="42" Margin="10,258,0,0" VerticalAlignment="Top" Width="242" Click="button_Click"/>
        <Image x:Name="aveex_bandera_for_aluprof_Kolejne_budynki_w_USA_w_systemach_ALUPROF_Marriott_LIC_jpg" Margin="302,18,40,10" Source="aveex_bandera_for_aluprof_Kolejne_budynki_w_USA_w_systemach_ALUPROF_Marriott_LIC.jpg" Stretch="Fill"/>
