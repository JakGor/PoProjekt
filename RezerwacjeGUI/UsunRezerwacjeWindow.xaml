<Window x:Class="RezerwacjeGUI.UsunRezerwacjeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RezerwacjeGUI"
        mc:Ignorable="d"
        Title="Usuwanie rezerwacji" Height="255.132" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="117*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Podaj swój PESEL " HorizontalAlignment="Left" Height="39" Margin="33,33,0,0" VerticalAlignment="Top" Width="190" FontSize="18" Grid.ColumnSpan="2"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="34" Margin="33,89,0,0" VerticalAlignment="Top" Width="230" Grid.ColumnSpan="2"/>
        <Button x:Name="button_zatwierdz" Content="OK" HorizontalAlignment="Left" Height="36" Margin="33,157,0,0" VerticalAlignment="Top" Width="92" Click="button_zatwierdz_Click"/>
        <Button x:Name="button_anuluj" Grid.ColumnSpan="2" Content="Anuluj" HorizontalAlignment="Left" Height="36" Margin="171,157,0,0" VerticalAlignment="Top" Width="92" Click="button_anuluj_Click"/>

    </Grid>
</Window>
